#include <fcntl.h>
#include "get_next_line.h"

int	main(int argc, const char **argv)
{
	int		fd;
	char	*line;

	fd = 0;
	line = NULL;
	if (argc < 2)
	{
		ft_putendl("STDIN: =====");
		while (get_next_line(0, &line) == RET_READL)
			ft_putendl(line);
		ft_strdel(&line);
		return (0);
	}
	while (*++argv)
	{
		ft_putstr(*argv);
		ft_putendl(": =====");
		fd = open(*argv, O_RDONLY);
		while (get_next_line(fd, &line) == RET_READL)
			ft_putendl(line);
		close(fd);
	}
	ft_strdel(&line);
	return (0);
}
