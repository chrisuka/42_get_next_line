#include <fcntl.h>
#include "libft.h"
#include "get_next_line.h"

int	main(int argc, const char **argv)
{
	int		fd;
	char	*line;

	if (argc < 2)
		return (RET_ERROR);
	line = (char *)malloc(BUFF_SIZE + 1);
	if (!line)
		return (RET_ERROR);
	while (*++argv)
	{
		fd = open(*argv, O_RDONLY);
		while (get_next_line(fd, &line, BUFF_SIZE) == RET_READL)
			ft_putendl(line);
		close(fd);
	}
	ft_strdel(&line);
	return (0);
}
