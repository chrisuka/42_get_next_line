#include <fcntl.h>
#include <stdio.h>
#include "get_next_line.h"

#define DEBUG_BUILD 1

#define FMEM_MAPC 5
#define C_NOPRINT '?'

#pragma region DEBUG_FUNC
static inline char	*fmem(char *str, size_t size)
{
	char		*new;
	char		*s;
	char		*m_p;
	const char	mapfr[FMEM_MAPC] = "\n\t\v\r\0";
	const char	mapto[FMEM_MAPC] = "%\t^~0";

	if (!str || !size)
		return (NULL);
	new = (char *)malloc(sizeof(char) * size + 1);
	if (!new)
		return (NULL);
	new[size] = 0;
	s = new;
	while (size-- > 0)
	{
		m_p = ft_memchr(mapfr, *str, FMEM_MAPC);
		if (m_p)
			*s = mapto[m_p - mapfr];
		else if (ft_isprint(*str))
			*s = *str;
		else
			*s = C_NOPRINT;
		s++;
		str++;
	}
	return (new);
}

static void	printlines(int fd)
{
	char	*line;
	size_t	lin;
	int		ret;
	char	*fstr;

	lin = 0;
	while (FT_TRUE)
	{
		ret = get_next_line(fd, &line);
		switch (ret)
		{
			case RET_READL:
				if (!line)
					printf("line %lu : (empty)\n", lin);
				else
				{
					fstr = fmem(line, ft_strlen(line));
					printf("line %lu : '%s'\n", lin, fstr);
					ft_strdel(&fstr);
				}
				break;
			case RET_EOF:
				printf("line %lu : EOF, exiting\n", lin);
				break;
			case RET_ERROR:
				printf("line %lu : ERROR! aborting\n", lin);
				break;
			default:
				printf("line %lu : UNRECOGNIZED EXIT CODE (%i), aborting\n", lin, ret);
				break;
		}
		ft_strdel(&line);
		if (ret != RET_READL)
			return;
		lin++;
	}
}
#pragma endregion

int	main(int argc, const char **argv)
{
	int		fd;
	char	*line;

	fd = 0;
	line = NULL;

	if (argc < 2)
	{
		ft_putendl("STDIN: =====");
		printlines(0);
	}
	else while (argc-- > 1 && *++argv)
	{
		ft_putstr(*argv);
		ft_putendl(": =====");
		fd = open(*argv, O_RDONLY);
		if (fd == -1)
		{
			ft_putendl("error opening file!");
			continue ;
		}
		printlines(fd);
		close(fd);
	}
#if DEBUG_BUILD
	system("leaks gnl_test");
#endif
	return (0);
}
